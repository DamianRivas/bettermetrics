<div class="container">
  <h1>Edit <%= @registered_application.name %></h1>

  <div class="row">
    <div class="col">
      <%= form_for [current_user, @registered_application] do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Enter app name here" %>
        </div>

        <div class="form-group">
          <%= f.label :url, "URL" %>
          <%= f.text_field :url, class: "form-control", placeholder: "Enter app's URL here" %>
        </div>

        <div class="form-group">
          <%= f.submit "Save", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
