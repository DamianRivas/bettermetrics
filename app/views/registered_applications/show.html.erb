<div class="container">
  <header class="row">
    <h1><%= @registered_application.name %></h1>
  </header>
  <div class="row">
    <div class="col-8">
      <p>URL: <%= @registered_application.url %></p>
    </div>
    <div class="col-4">
      <div class="float-right">
        <%= link_to "Edit", edit_user_registered_application_path, class: "btn btn-success" %>
        <%= link_to "Delete", user_registered_application_path, method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this application"} %>
      </div>
    </div>
  </div>
  <div class="row">
    <h3>Event Chart</h3>
    <%= pie_chart @registered_application.events.group(:name).count %>
  </div>
  <div class="row">
    <h3>Events Over Time</h3>
    <%= line_chart @registered_application.events.group_by_day(:created_at).count %>
  </div>
</div>